{
    "name": "sub-explorer",
    "displayName": "Sub Explorer",
    "repository": {
        "type": "git",
        "url": "https://github.com/another-s347/sub-explorer.git"
    },
    "description": "Group-focused sub-tree explorer for large repos: create feature groups that show only selected folders/files in a sticky-scroll file tree.",
    "version": "0.0.3",
    "publisher": "another-s347",
    "engines": {
        "vscode": "^1.83.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./dist/extension.js",
    "activationEvents": [
        "onStartupFinished"
    ],
    "contributes": {
        "configuration": {
            "title": "Sub Explorer",
            "properties": {
                "subExplorer.activeBehaviorEnabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable active group behavior and auto-focus on the current editor file. Disable to stop auto-selecting groups on click and auto-revealing on editor changes."
                },
                "subExplorer.displayMode": {
                    "type": "string",
                    "enum": [
                        "name",
                        "fullPath"
                    ],
                    "default": "name",
                    "description": "Controls how file/folder labels are shown in Sub Explorer: 'name' shows only the current node name; 'fullPath' shows the path from the group's root item to the node (top-level items use workspace-relative paths)."
                },
                "subExplorer.debug": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable debug logging to Output: Sub Explorer"
                },
                "subExplorer.collapseOthersOnActivate": {
                    "type": "boolean",
                    "default": false,
                    "description": "When a group becomes active, collapse all other groups (implemented by collapsing all and re-expanding the active group)."
                }
            }
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "subExplorer",
                    "title": "Sub Explorer",
                    "icon": "./resources/icon.svg"
                }
            ]
        },
        "views": {
            "subExplorer": [
                {
                    "id": "subExplorerView",
                    "name": "Sub Explorer"
                }
            ]
        },
        "commands": [
            {
                "command": "subExplorer.addGroup",
                "title": "%command.addGroup%",
                "icon": "$(add)"
            },
            {
                "command": "subExplorer.moveGroupUp",
                "title": "%command.moveGroupUp%",
                "icon": "$(arrow-up)"
            },
            {
                "command": "subExplorer.moveGroupDown",
                "title": "%command.moveGroupDown%",
                "icon": "$(arrow-down)"
            },
            {
                "command": "subExplorer.setActiveGroup",
                "title": "%command.setActiveGroup%",
                "icon": "$(target)"
            },
            {
                "command": "subExplorer.clearActiveGroup",
                "title": "%command.clearActiveGroup%",
                "icon": "$(close)"
            },
            {
                "command": "subExplorer.searchInGroup",
                "title": "%command.searchInGroup%",
                "icon": "$(search)"
            },
            {
                "command": "subExplorer.renameGroup",
                "title": "%command.renameGroup%"
            },
            {
                "command": "subExplorer.copyGroup",
                "title": "%command.copyGroup%",
                "icon": "$(copy)"
            },
            {
                "command": "subExplorer.deleteGroup",
                "title": "%command.deleteGroup%"
            },
            {
                "command": "subExplorer.addItem",
                "title": "%command.addItem%"
            },
            {
                "command": "subExplorer.removeItem",
                "title": "%command.removeItem%"
            },
            {
                "command": "subExplorer.openItem",
                "title": "%command.openItem%"
            },
            {
                "command": "subExplorer.openItemToSide",
                "title": "%command.openItemToSide%"
            },
            {
                "command": "subExplorer.revealInExplorer",
                "title": "%command.revealInExplorer%"
            },
            {
                "command": "subExplorer.revealInOS",
                "title": "%command.revealInOS%"
            },
            {
                "command": "subExplorer.copyPath",
                "title": "%command.copyPath%"
            },
            {
                "command": "subExplorer.copyRelativePath",
                "title": "%command.copyRelativePath%"
            },
            {
                "command": "subExplorer.refresh",
                "title": "%command.refresh%"
            },
            {
                "command": "subExplorer.addSelectedToGroup",
                "title": "%command.addSelectedToGroup%"
            },
            {
                "command": "subExplorer.groupSettings",
                "title": "%command.groupSettings%",
                "icon": "$(settings)"
            },
            {
                "command": "subExplorer.checkoutGroupRef",
                "title": "%command.checkoutGroupRef%",
                "icon": "$(cloud-download)"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "subExplorer.addSelectedToGroup",
                    "when": "resourceScheme == file || resourceScheme == vscode-remote",
                    "group": "navigation@100"
                }
            ],
            "view/title": [
                {
                    "command": "subExplorer.addGroup",
                    "when": "view == subExplorerView",
                    "group": "navigation@10"
                }
            ],
            "view/item/context": [
                {
                    "command": "subExplorer.setActiveGroup",
                    "when": "(viewItem == group || viewItem == groupMismatch) && view == subExplorerView && viewItem != groupActive && viewItem != groupMismatchActive",
                    "group": "navigation@8"
                },
                {
                    "command": "subExplorer.moveGroupUp",
                    "when": "(viewItem == group || viewItem == groupMismatch || viewItem == groupActive || viewItem == groupMismatchActive) && view == subExplorerView",
                    "group": "navigation@8.5"
                },
                {
                    "command": "subExplorer.moveGroupDown",
                    "when": "(viewItem == group || viewItem == groupMismatch || viewItem == groupActive || viewItem == groupMismatchActive) && view == subExplorerView",
                    "group": "navigation@8.6"
                },
                {
                    "command": "subExplorer.clearActiveGroup",
                    "when": "(viewItem == groupActive || viewItem == groupMismatchActive) && view == subExplorerView",
                    "group": "navigation@8"
                },
                {
                    "command": "subExplorer.searchInGroup",
                    "when": "(viewItem == group || viewItem == groupMismatch) && view == subExplorerView",
                    "group": "navigation@9"
                },
                {
                    "command": "subExplorer.addItem",
                    "when": "(viewItem == group || viewItem == groupMismatch) && view == subExplorerView",
                    "group": "navigation@10"
                },
                {
                    "command": "subExplorer.renameGroup",
                    "when": "(viewItem == group || viewItem == groupMismatch) && view == subExplorerView",
                    "group": "navigation@11"
                },
                {
                    "command": "subExplorer.copyGroup",
                    "when": "(viewItem == group || viewItem == groupMismatch) && view == subExplorerView",
                    "group": "navigation@12"
                },
                {
                    "command": "subExplorer.checkoutGroupRef",
                    "when": "viewItem == groupMismatch && view == subExplorerView",
                    "group": "inline"
                },
                {
                    "command": "subExplorer.deleteGroup",
                    "when": "(viewItem == group || viewItem == groupMismatch) && view == subExplorerView",
                    "group": "navigation@13"
                },
                {
                    "command": "subExplorer.groupSettings",
                    "when": "(viewItem == group || viewItem == groupMismatch) && view == subExplorerView",
                    "group": "navigation@20"
                },
                {
                    "command": "subExplorer.revealInExplorer",
                    "when": "(viewItem == group || viewItem == groupMismatch || viewItem == item || viewItem == fs) && view == subExplorerView",
                    "group": "navigation@30"
                },
                {
                    "command": "subExplorer.removeItem",
                    "when": "viewItem == item && view == subExplorerView",
                    "group": "navigation@14"
                },
                {
                    "command": "subExplorer.openItem",
                    "when": "(viewItem == item || viewItem == fs) && view == subExplorerView",
                    "group": "navigation@1"
                },
                {
                    "command": "subExplorer.openItemToSide",
                    "when": "(viewItem == item || viewItem == fs) && view == subExplorerView",
                    "group": "navigation@2"
                },
                {
                    "command": "subExplorer.revealInOS",
                    "when": "(viewItem == item || viewItem == fs) && view == subExplorerView",
                    "group": "navigation@3"
                },
                {
                    "command": "subExplorer.copyPath",
                    "when": "(viewItem == item || viewItem == fs) && view == subExplorerView",
                    "group": "navigation@90"
                },
                {
                    "command": "subExplorer.copyRelativePath",
                    "when": "(viewItem == item || viewItem == fs) && view == subExplorerView",
                    "group": "navigation@91"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "package": "vsce package",
        "lint": "eslint . --ext .ts"
    },
    "dependencies": {
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/node": "^18.19.0",
        "@types/vscode": "^1.83.0",
        "@types/uuid": "^9.0.7",
        "tslib": "^2.6.2",
        "typescript": "^5.4.5",
        "eslint": "^8.57.0",
        "@typescript-eslint/eslint-plugin": "^6.7.4",
        "@typescript-eslint/parser": "^6.7.4"
    }
}